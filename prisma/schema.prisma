// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int           @id @default(autoincrement())
  email        String?       @unique
  password     String?

  profile      Profile[]
  projects     Project[]
  refreshToken RefreshToken?

  @@map("users")
}

model RefreshToken {
  id        Int  @id @default(autoincrement())
  expiresIn Int
  user      User @relation(fields: [userId], references: [id])
  userId    Int

  @@map("refreshToken")
}

model Profile {
  id     Int     @id @default(autoincrement())
  name   String?
  bio    String?

  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id])

  @@map("profiles")
}

model Project {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  desc   String?

  userId Int     
  user   User    @relation(fields: [userId], references: [id])

  @@map("projects")
}
